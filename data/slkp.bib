	Doi = {10.1093/molbev/msx285},
	Journal = {Mol Biol Evol},
	Journal-Full = {Molecular biology and evolution},
	Keywords = {Haemoproteus; Leucocytozoon; Plasmodium; mitochondrial genome; phylogeny; substitution rates; time tree},
	Month = {Nov},
	Pmid = {29126122},
